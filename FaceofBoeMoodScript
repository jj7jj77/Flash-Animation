stop();

BTN.addEventListener(MouseEvent.CLICK,showFace);
function showFace(evt:MouseEvent):void
{
	if (MoodIT.text == 'happy')
		Face.gotoAndStop('Happy');
	else if (MoodIT.text == 'sad')
		Face.gotoAndStop('Sad');
	else if (MoodIT.text == 'angry')
		Face.gotoAndStop('Angry');
	else if (MoodIT.text == 'tired')
		Face.gotoAndStop('Tired');
	else
		Face.gotoAndStop('Normal');
	//endif
}//end ftn showFace
