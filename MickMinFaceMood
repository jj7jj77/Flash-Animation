stop();

BTN.addEventListener(MouseEvent.CLICK,showFace);

function showFace(evt:MouseEvent):void

{
if (MoodIT.text == 'happy') 
	{
		MicFace.gotoAndStop('MicHappy');
		MinFace.gotoAndStop('MinHappy');
	} 
	else if (MoodIT.text == 'wink') 
	{
		MicFace.gotoAndStop('MicWink');
		MinFace.gotoAndStop('MinWink');
	} 
	else if (MoodIT.text == 'laugh') 
	{
		MicFace.gotoAndStop('MicLaugh');
		MinFace.gotoAndStop('MinLaugh');
	} 
	else if (MoodIT.text == 'love') 
	{
		MicFace.gotoAndStop('MicLove');
		MinFace.gotoAndStop('MinLove');
	} 
	else 
	{
		MicFace.gotoAndStop('MicNormal');
		MinFace.gotoAndStop('MinNormal');
	}
}//endif
